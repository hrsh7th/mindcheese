{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "lib": ["dom", "es2020", "scripthost"]
  },
  "include": ["**/*.ts"]
}
